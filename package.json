{
  "name": "node-media-manager",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npm-run-all --sequential build:*",
    "build:clean": "del-cli build",
    "build:client": "react-router build",
    "build:server": "tsc server/server.ts --outdir build/server --module nodenext",
    "dev": "cross-env NODE_ENV=development nodemon -r dotenv/config --watch server --exec tsx server/server.ts",
    "docker": "docker compose up -d",
    "format": "prettier --write .",
    "format:repo": "npm run format && npm run lint -- --fix",
    "lint": "eslint .",
    "lint2": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "react-router serve ./build/server.js",
    "start:mocks": "cross-env NODE_ENV=production node --require ./mocks --require dotenv/config ./build/server.js",
    "start:old": "cross-env NODE_ENV=production node ./build/server.js",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "react-router typegen && tsc && tsc -p cypress",
    "validate": "npm-run-all --parallel \"test -- --run\" lint typecheck test:e2e:run"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/postgres-data"
  ],
  "dependencies": {
    "@isaacs/express-prometheus-middleware": "^1.2.1",
    "@prisma/client": "^6.4.1",
    "@react-router/express": "^7.3.0",
    "@react-router/fs-routes": "^7.3.0",
    "@react-router/node": "^7.3.0",
    "bcryptjs": "^3.0.2",
    "chokidar": "^4.0.3",
    "compression": "^1.8.0",
    "cross-env": "^7.0.3",
    "express": "^4.21.2",
    "isbot": "^5.1.23",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.3.0",
    "source-map-support": "^0.5.21",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@faker-js/faker": "^9.6.0",
    "@react-router/dev": "^7.3.0",
    "@tailwindcss/vite": "^4.0.12",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/eslint": "^9.6.1",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/eslint-plugin-markdown": "^2.0.2",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/source-map-support": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.8",
    "cookie": "^1.0.2",
    "cypress": "^14.1.0",
    "del-cli": "^6.0.0",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-cypress": "^4.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^16.0.0",
    "happy-dom": "^17.4.2",
    "jiti": "^2.4.2",
    "msw": "^2.7.3",
    "nodemon": "^3.1.9",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.4.1",
    "start-server-and-test": "^2.0.10",
    "tailwindcss": "^4.0.12",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}